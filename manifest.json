{
  "manifest_version": 3,
  "name": "Sync Youtube Play",
  "description": "Sync Youtube videos via sync-tube",
  "version": "1.0",
  "icons": {
    "16": "./imgs/sync-16.png",
    "48": "./imgs/sync-32.png",
    "128": "./imgs/sync-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./imgs/sync-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*", "https://*.sync-tube.de/*"],
      "css": ["styles.css"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": ["storage", "tabs", "activeTab"]
}
